 {
  "name": "mz-header",
  "description" : "Simple & free tool for adding http request header params",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
		"16": "./avengers_16.png",
		"32": "./avengers_32.png",
    "48": "./avengers_48.png",
    "64": "./avengers_48.png",
    "128": "./avengers_48.png"
	},
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {
    "default_popup": "./popup.html",
    "default_icon": "./avengers_32.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["webRequest", "webRequestBlocking", "storage"]
}
